@model CarRental

@{
    ViewData["Title"] = "Edytuj wynajem";
}

<form method="post">
    <input asp-for="CarRentalId" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Edytuj wynajęcie</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RentFrom"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RentFrom" class="form-control" />
                        <span asp-validation-for="RentFrom" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RentTo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RentTo" class="form-control" />
                        <span asp-validation-for="RentTo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="RentalId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="RentalId" class="form-control" />
                        <span asp-validation-for="RentalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CarId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CarId" class="form-control" />
                        <span asp-validation-for="CarId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Edytuj" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">
                                Powrót
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}