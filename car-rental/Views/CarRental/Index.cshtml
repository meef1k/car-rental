@model IEnumerable<CarRental>

@{
    ViewData["Title"] = "Wynajem";
}

<div class="container p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Lista wynajmu</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="CarRental" asp-action="Create" class="btn btn-primary">
                Dodaj nowy wynajem
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-brodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <td>
                        Wynajęcie od
                    </td>
                    <td>
                        Wynajęcie do
                    </td>
                    <td>
                        Wynajmujący
                    </td>
                    <td>
                        Samochód
                    </td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.RentFrom</td>
                    <td width="20%">@obj.RentTo</td>
                    <td width="25%">@obj.RentalId</td>
                    <td width="25%">@obj.CarId</td>
                    <td></td>
                </tr>
            }
            </tbody>
            </table>
        }
        else
        {
            <p>Nie ma wynajęć w bazie</p>
        }
</div>