@model IEnumerable<CarRental>

@{
    ViewData["Title"] = "Edytuj wynajem";
}

<div class="container p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Lista wynajmu</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="CarRental" asp-action="Create" class="btn btn-primary">
                Dodaj nowy wynajem
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-brodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Wynajęcie od
                    </th>
                    <th>
                        Wynajęcie do
                    </th>
                    <th>
                        Wynajmujący
                    </th>
                    <th>
                        Samochód
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.RentFrom</td>
                    <td width="20%">@obj.RentTo</td>
                    <td width="20%">@obj.RentalId</td>
                    <td width="20%">@obj.CarId</td>
                    <td class="text-center">
                        <div class="w-75 vtn-group" role="group">
                            <a asp-controller="CarRental" asp-route-Id="@obj.CarRentalId" asp-action="Edit" class="btn btn-success">
                                Edytuj
                            </a>
                            <a asp-controller="CarRental" asp-route-Id="@obj.CarRentalId" asp-action="Delete" class="btn btn-danger">
                                Usuń
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
            </table>
        }
        else
        {
            <p>Nie ma wynajęć w bazie</p>
        }
</div>