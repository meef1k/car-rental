@model IEnumerable<Cars>

@{
    ViewData["Title"] = "Samochody";
}

<div class="container p-3">
    <div class="row pt-6">
        <div class="col-6">
            <h2 class="text-primary">Lista samochodów</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Cars" asp-action="Create" class="btn btn-primary">
                Dodaj nowy samochód
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-brodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <td>
                        Marka pojazdu
                    </td>
                    <td>
                        Numer rejestracyjny
                    </td>
                    <td>
                        Typ samochodu
                    </td>
                    <td>
                        Czy jest dostępny?
                    </td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="25%">@obj.CarNumber</td>
                    <td width="25%">@obj.CarType</td>
                    <td width="10%">@obj.IsVisible</td>
                    <td></td>
                </tr>
            }
            </tbody>
            </table>
        }
        else
        {
            <p>Nie ma samochodów w bazie</p>
        }
</div>