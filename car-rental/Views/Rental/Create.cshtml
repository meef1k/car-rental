@model Rental

@{
    ViewData["Title"] = "Dodaj użytkownika";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Dodaj użytkownika</h2>
        </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CustomerName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CustomerName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CustomerAddress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CustomerAddress" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AddressEmail"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AddressEmail" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Utwórz" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">
                            Powrót
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            @* Keep this empty *@
        </div>
    </div>
    </div>
</form>

